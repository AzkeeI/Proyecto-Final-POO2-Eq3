                <div class="task">
                    <div class="task-content">
                    </div>
                    <div class="task-actions">
                        <button>Editar</button>
                        <button>Eliminar</button>
                    </div>
                </div>
                <div class="task">
                    <div class="task-content">
                    </div>
                    <div class="task-actions">
                        <button>Editar</button>
                        <button>Eliminar</button>
                    </div>
                </div>
            </div>
            <div class="column">
                <div class="column-header">Hecho</div>
                <div class="task">
                    <div class="task-content">
                    </div>
                    <div class="task-actions">
                        <button>Editar</button>
